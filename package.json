    "winston": "^3.11.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/express": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
